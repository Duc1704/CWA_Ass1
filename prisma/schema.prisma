datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Topic stores the topic title; Questions belong to a Topic
model Topic {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  title     String
  questions Question[]
}

model Question {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  prompt     String   // question text
  hint1      String?
  hint2      String?
  hint3      String?
  answer     String
  orderIndex Int

  topicId String
  topic   Topic   @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@index([topicId, orderIndex])
}


